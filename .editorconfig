root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{props,slnx,targets}]
indent_style = tab

[*.{slnx}]
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2

[*.verified.cs]
trim_trailing_whitespace = false
insert_final_newline = false
